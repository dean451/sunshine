<!-- Header -->
<header id="formal">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-text">
                    <span class="name">The Sunshine Feels</span>
                    <hr class="star-light">
                    <%= image_tag "banjo.jpg", class: "img-responsive", id: "hero" %>
                    <span class="skills">Bass, Drums, Guitar</span>
                </div>
            </div>
        </div>
    </div>
    <%= image_tag "drums.jpg", class: "img-responsive", id: "hero" %>

    <div class="" style="padding-bottom: 10px">

    </div>
</header>

<!-- Portfolio Grid Section -->
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Portfolio</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
                <% @posts.each do |post| %>
                <div class="col-sm-4 portfolio-item">
                <%= link_to post_path(post) do %>
                  <%= image_tag post.image, class: 'img-responsive' %>
                <% end %>
                </div>
            <% end %>
        </div>
    </div>
</section>

<!-- Sound Section -->
<section class="success" id="sunny">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Songs</h2>
                <hr class="star-primary">
            </div>
        </div>

        <div class="row">
            <iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/users/160471912&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
        </div>
